if(window.NodeList&&!NodeList.prototype.forEach){NodeList.prototype.forEach=Array.prototype.forEach}document.addEventListener("DOMContentLoaded",function(){var t=document.querySelectorAll(".gb-block-notice.gb-dismissable[data-id]");t.forEach(function(e){var o=e.getAttribute("data-id");var t=e.querySelector(".gb-notice-dismiss");if(!localStorage.getItem("notice-"+o)){e.style.display="block"}if(t){t.addEventListener("click",function(t){t.preventDefault();localStorage.setItem("notice-"+o,"1");e.style.display=""})}})});